<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/logfile.log</file>
        <append>true</append>
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} %-5p %logger{36} %X{akkaSource} [%file:%line] - %m%n</pattern>
        </encoder>
    </appender>

    <!-- IoT API calls (exceptions + creation times) -->
    <appender name="IOT-API" class="ch.qos.logback.core.FileAppender">
        <file>logs/iotApi.log</file>
        <append>true</append>
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} %-5p %logger{36} %X{akkaSource} [%file:%line] - %m%n</pattern>
        </encoder>
    </appender>
    <logger name="iot-api" LEVEL="DEBUG" additivity="false">
        <appender-ref ref="IOT-API"/>
    </logger>

    <!-- HERE maps creation (only exceptions) -->
    <appender name="HERE-MAPS" class="ch.qos.logback.core.FileAppender">
        <file>logs/hereMaps.log</file>
        <append>true</append>
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} %-5p %logger{36} %X{akkaSource} [%file:%line] - %m%n</pattern>
        </encoder>
    </appender>
    <logger name="here-maps" LEVEL="DEBUG" additivity="false">
        <appender-ref ref="HERE-MAPS"/>
    </logger>


    <!-- Simulation (creation & updating) -->
    <appender name="SIMULATION" class="ch.qos.logback.core.FileAppender">
        <file>logs/simulation.log</file>
        <append>true</append>
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} %-5p %logger{36} %X{akkaSource} [%file:%line] - %m%n</pattern>
        </encoder>
    </appender>
    <logger name="simulation" LEVEL="DEBUG" additivity="false">
        <appender-ref ref="SIMULATION"/>
    </logger>

    <root>
        <appender-ref ref="FILE"/>
    </root>
</configuration>